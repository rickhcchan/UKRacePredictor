    "min_data_in_leaf": 50,
    "lambda_l1": 0.2,
    "lambda_l2": 0.2,
    "verbose": -1,
    "random_state": 42,
    "is_unbalance": true,
    "num_boost_round": 1000,
    "early_stopping_rounds": 100
