      "type_id", 
      "sex_id",
      "sire_id",
      "dam_id",
      "damsire_id",
      "hg",
      "sex_rest",
      "horse_or_trend_direction"
    ],
    "ordinal": [
      "pattern_id",
      "going_id",
      "age",
      "lbs",
      "dist_f",
      "ran",
      "draw",
      "rating_upper",
      "age_min",
      "age_max",
      "class_number",
      "horse_total_runs",
      "horse_win_pct",
      "horse_course_runs",
      "horse_course_win_pct",
      "horse_distance_runs",
      "horse_distance_win_pct",
      "horse_going_runs",
      "horse_going_win_pct",
      "horse_days_since_last_run",
      "horse_last_or_rating",
      "horse_avg_or_90d",
      "horse_or_sample_size",
      "jockey_total_runs",
      "jockey_win_pct",
